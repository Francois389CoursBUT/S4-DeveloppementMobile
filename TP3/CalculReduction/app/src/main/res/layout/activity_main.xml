<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1,2"
    android:layout_margin="10dp"
    tools:context=".MainActivity">

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prix_init"
            android:layout_column="0"/>
        <EditText
            android:id="@+id/prix_init"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/prix_init_hint"
            android:layout_span="2"
            android:layout_column="1"
            android:maxLength="10"
            android:inputType="numberDecimal"/>
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/taux_reduc"
            android:layout_column="0"/>
        <EditText
            android:id="@+id/taux_reduc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/taux_reduc_hint"
            android:layout_span="2"
            android:layout_column="1"
            android:inputType="number"/>
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/economie"
            android:layout_column="0"/>
        <EditText
            android:id="@+id/economie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/economie_hint"
            android:layout_span="2"
            android:focusable="false"
            android:layout_column="1"/>
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a_payer"
            android:layout_column="0"/>
        <EditText
            android:id="@+id/a_payer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/a_payer_hint"
            android:layout_span="2"
            android:focusable="false"
            android:layout_column="1"/>
    </TableRow>

    <TableRow>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calculer"
            android:onClick="calculer"
            android:layout_column="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/annuler"
            android:onClick="annuler"
            android:layout_column="2"/>
    </TableRow>


</TableLayout>